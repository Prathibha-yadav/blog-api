<!-- views/blog.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Posts</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f5f5f5;
            color: #333;
            margin: 0;
            padding: 20px;
            text-align: center;
        }

        h1 {
            color: #007BFF;
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            margin-bottom: 20px;
            padding: 20px;
            text-align: left;
        }

        h2 {
            color: #007BFF;
        }

        p {
            line-height: 1.6;
            margin-bottom: 10px;
        }

        strong {
            color: #007BFF;
        }
    </style>
</head>
<body>
    <h1>Blog Posts</h1>
    <ul>
        <% blogPosts.forEach(post => { %>
            <li>
                <h2><%= post.title %></h2>
                <p><%= post.content %></p>
                <p><strong>Author:</strong> <%= post.author %></p>
            </li>
        <% }); %>
    </ul>
</body>
</html>
